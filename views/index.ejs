
<%- include('./partials/header') %>

<% if(success && success.length > 0) { %>
  <div class="absolute mt-3 top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500" id="flash-success">
      <span class="inline-block mt-1 mb-1 text-white">
          <%= success %>
      </span>
  </div>
<% } %>

<% if(error && error.length > 0) { %>
  <div class="absolute mt-3 top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500" id="flash-error">
      <span class="inline-block mt-1 mb-1 text-white">
          <%= error %>
      </span>
  </div>
<% } %>
            <div class="w-full h-screen flex px-20">
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h3 class="text-4xl">welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
                        <h4 class="text-2xl mb-5">create your account</h4>
                        <form autocomplete="on" action="/users/register" method="post">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="text" placeholder="Full Name" name="fullname">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <button class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                                value="Create My Account">Create My Account</button>
                        </form>
                    </div>
                </div>
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h4 class="text-2xl capitalize mb-5">login your account</h4>
                        <form autocomplete="on" action="/users/login" method="post" >
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <button class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                                value="Login">Login</button>
                        </form>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>
            <script>
                setTimeout(function() {
                  const flashSuccess = document.getElementById('flash-success');
                  const flashError = document.getElementById('flash-error');
              
                  // Check and hide the success flash message if it exists
                  if (flashSuccess) {
                    flashSuccess.style.display = 'none';
                  }
              
                  // Check and hide the error flash message if it exists
                  if (flashError) {
                    flashError.style.display = 'none';
                  }
                }, 3000); // Hide after 3 seconds
              </script>
              